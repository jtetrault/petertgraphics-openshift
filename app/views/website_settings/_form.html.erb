<div class="row">
  <div class="span10 offset2">
    <%= form_for @website_settings, :url => website_settings_path  do |f| %>
      <% if @website_settings.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@website_settings.errors.count, "error") %> prohibited the website settings from being saved:</h2>

          <ul>
          <% @website_settings.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :banner %>
        <% if @website_settings.banner.exists? %>
          <%= image_tag @website_settings.banner.url(:banner), :class => "bordered-image" %> <br />
        <% end %>
        <%= f.file_field :banner %>
      </div>
      <div class="field">
        <%= f.label :homepage_blurb %>
        <%= f.text_area :homepage_blurb %>
      </div>
            <div class="field">
        <%= f.label :contact %>
        <%= f.text_area :contact %>
      </div>
      <div class="actions">
        <%= f.submit "Save Settings", :class => "btn btn-primary" %>
        <%= cancel_button %>
      </div>
    <% end %>
  </div>
</div>