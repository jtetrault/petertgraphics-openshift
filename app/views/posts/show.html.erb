<p id="notice"><%= notice %></p>

<div class="row">
	<div class="span10 offset2">
		<h1><%= @post.title %></h1>
	</div>
</div>

<div class="row">
	<div class="span10 offset2">
		<h1><%= link_to image_tag(@post.image.url(:large), :id => "image"), @post.image.url(:original) %></h1>
	</div>
</div>

<div class="row">
	<div class="span10 offset2">
		<p><%= @post.description %></p>
	</div>
</div>

