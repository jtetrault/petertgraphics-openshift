<div class="admin-actions pull-right">
	<%= link_to "Edit Post", edit_post_path(@post), :class => "btn btn-primary" %>
	<%= link_to 'Delete Post', @post, method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn btn-danger" %>
</div>

<p id="notice"><%= notice %></p>

<div class="row">
	<div class="span10 offset1">
		<h1><%= @post.title %></h1>
	</div>
</div>

<div class="row">
	<div class="span8 offset2">
		<h1><%= link_to image_tag(@post.image.url(:large), :id => "image"), @post.image.url(:original) %></h1>
	</div>
</div>

<div class="row">
	<div class="span8 offset2">
		<p><%= @post.description %></p>
	</div>
</div>

<%= link_to 'Back', @post.errors.any? ? request.env['HTTP_REFERRER'] : :back, :class => "btn" %>
