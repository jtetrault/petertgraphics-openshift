<div class="row">
  <div class="span11 offset1">
    <%= form_for(@post) do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>
      </div>
      <div class="field">
        <%= f.label :category %>
        <%= collection_select(:post, :category_id, Category.all, :id, :title) %>
      </div>
      <div class="field">
        <%= f.label :image %>
        <% if @post.image.exists? %>
          <%= image_tag @post.image.url(:medium), :class => "bordered-image" %> <br />
        <% end %>
        <%= f.file_field :image %>
      </div>
      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description, :class => 'span10' %>
      </div>
      <div class="actions">
        <%= f.submit "Save Post", :class => "btn btn-primary" %>
        <%= cancel_button %>
      </div>
    <% end %>
  </div>
</div>