<div class="row">
  <div class="span11 offset1">
    <%= form_for @post, :html => {:multipart => :true} do |f| %>
      <% if @post.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

          <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :title %>
        <%= f.text_field :title %>

      </div>
      <div class="field">
        <%= f.label :category %>
        <%= collection_select(:post, :category_id, Category.all, :id, :title) %>
      </div>

      <div class="field">
        <%= f.label :description %>
        <%= f.text_area :description %>
      </div>

      <%= f.fields_for :images do |builder| %>
        <%= render partial: 'images/builder', locals: {builder: builder} %>
      <% end %>

      <div class="actions">
        <%= f.submit "Save Post", :class => "btn btn-primary" %>
        <%= cancel_button %>
      </div>
    <% end %>
  </div>
</div>