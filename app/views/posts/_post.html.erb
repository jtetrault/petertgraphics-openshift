<div class="row">
	<div class="span10 offset2">
		<h2><%= link_to post.title, post_path(post) %></h2>
	</div>
</div>
<div class="row">
	<div class="span3 offset2">
		<p><%= post.short_description %></p>
		<p><%= link_to "Read More", post_path(post) %></p>
	</div>
	<div class="span5 offset1">
		<%= image_tag post.image.url(:medium), :class => "bordered-image" %>
	</div>
</div>
<div class="row">
	<div class="span10 offset2">
		<p> Posted in <%= link_to post.category.title, category_path(post.category) %> at <%= post.created_at %> </p>
	</div>
</div>