<div class="row">
	<div class="span10 offset2">
		<h2><%= link_to post.title, post %></h2>
	</div>
</div>
<div class="row">
	<div class="span3 offset2">
		<p><%= markdown post.short_description %></p>
		<p><%= link_to "Read More", post %></p>
	</div>
	<div class="span5 offset1 text-center">
		<%= link_to image_tag(post.first_image.url(:medium), :class => "bordered-image"), post %>
	</div>
</div>
<div class="row">
	<div class="span10 offset2">
		<p> Posted in <%= link_to post.category.title, post.category %> at <%= post.created_at %> </p>
	</div>
</div>